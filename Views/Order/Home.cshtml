@model IEnumerable<Mubayaa.DTOs.ProductDTO>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>Home</h2>

@if (TempData["Msg"] != null)
{
    <div>
        <p class="alert alert-@TempData["Class"]">@TempData["Msg"]</p>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @{
                    string categoryName = item.Category switch
                    {
                        1 => "Electronics",
                        2 => "Cosmetics",
                        3 => "Clothings",
                        4 => "Footware",
                        _ => "Unknown"
                    };
                }
                @categoryName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @{
                    string statusName = item.Status switch
                    {
                        1 => "In stock",
                        2 => "Limited stock",
                        3 => "Out of stock",
                        4 => "Discontinued",
                        _ => "Unknown"
                    };
                }
                @statusName
            </td>
            <td>
                <a href="/Order/AddtoCart/@item.Id" class="btn btn-primary">Add to Cart</a>
            </td>
        </tr>
    }
</table>